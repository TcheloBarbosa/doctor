<odoo>
    <data>
        <!-- Form view -->
        <record id="view_raiox_form" model="ir.ui.view">
            <field name="name">raiox.form</field>
            <field name="model">raiox</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="conta"/>
                            <field name="data_conta"/>
                            <field name="valor_original" widget="monetary"/>
                            <field name="valor_clinica" widget="monetary"/>
                            <field name="medico_id"/>
                            <field name="valor_medico" widget="monetary"/>
                            <field name="valor_imposto" widget="monetary"/>
                            <field name="valor_glosa" widget="monetary"/>
                            <field name="doctor_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Tree view -->
        <record id="view_raiox_tree" model="ir.ui.view">
            <field name="name">raiox.tree</field>
            <field name="model">raiox</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="conta"/>
                    <field name="data_conta"/>
                    <field name="valor_original" widget="monetary"/>
                    <field name="valor_clinica" widget="monetary"/>
                    <field name="medico_id"/>
                    <field name="valor_medico" widget="monetary"/>
                    <field name="valor_imposto" widget="monetary"/>
                    <field name="valor_glosa" widget="monetary"/>
                    <field name="doctor_id"/>
                </tree>
            </field>
        </record>

        <!-- Action window -->
        <record id="action_raiox" model="ir.actions.act_window">
            <field name="name">Raiox</field>
            <field name="res_model">raiox</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Action window -->
        <record id="action_raiox" model="ir.actions.act_window">
            <field name="name">Raiox</field>
            <field name="res_model">raiox</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
